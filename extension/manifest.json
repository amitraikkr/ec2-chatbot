{
  "manifest_version": 3,
  "name": "EC2 Chatbot",
  "version": "1.0",
  "description": "A Chatbot for managing AWS EC2 instances using ChatGPT",

 
  "action": {
      "default_icon": "icon.png",
      "default_popup": "index.html",
      "default_width": 400,
      "default_height": 600
  },

  "permissions": ["activeTab"],

  "icons": {
      "48": "icon.png"
  },

  "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
